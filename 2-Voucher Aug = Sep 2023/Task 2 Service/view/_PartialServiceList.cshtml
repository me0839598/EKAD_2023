@using Ekad.Voucher.domain.Resources
@model IEnumerable<Ekad.Voucher.domain.context.TblService>

<input id="delid" type="hidden" />
<div class="row" id="div_data" name="div_data">
    <div class="col-md-12" id="AllTable">

        <div class="portlet light bordered">
            <div class="portlet-title">
                <div class="caption font-dark">
                    <i class="icon-settings font-dark"></i>
                    <span class="caption-subject bold uppercase"> SearchResults</span>
                </div>
                <div class="tools"> </div>
            </div>
            <div class="portlet-body">

                <table class="table" width="99%" id="sample_1">
                    <thead>
                        <tr>

                            <th> ServiceType </th>
                            <th>ServiceNameAr</th>
                            <th>ServiceNameEn</th>
                            <th>ServiceNotesAr</th>
                            <th>ServiceNotesEn</th>
                        </tr>
                    </thead>
                    <tbody id="tableid" name="tableid">
                        @if (Model != null && Model.Count() > 0)
                        {

                            foreach (var item in Model)
                            {
                                <tr>

                                   
                                        <td>
                                        @if (@item.ServiceTypeFkNavigation != null)
                                        {
                                            
                                            @item.ServiceTypeFkNavigation.SettingNameEn


                                            }
                                        </td>
                                    

                                    <th>@item.ServiceNameAr</th>
                                    <th>@item.ServiceNameEn</th>
                                    <th>@item.ServiceNotesAr</th>
                                    <th>@item.ServiceNotesEn</th>

                                    <td>
                                        <div class="btn-group pull-right">
                                            <button class="btn green btn-xs btn-outline dropdown-toggle" data-toggle="dropdown">
                                                Tools
                                                <i class="fa fa-angle-down"></i>
                                            </button>
                                            <ul class="dropdown-menu pull-right">
                                                <li>
                                                    <a href="@Url.Action("Edit", new { id = item.ServiceId })"><i class="fa fa-edit"></i> @Resource.Edit</a>
                                                </li>
                                                <li>
                                                    <a onclick="deletepopup(@item.ServiceId)"><i class="fa fa-close"></i> @Resource.Delete </a>
                                                </li>
                                            </ul>
                                        </div>
                                    </td>

                                </tr>


                            }

                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<script src="~/assets/pages/scripts/table-datatables-responsive.min.js" type="text/javascript"></script>